<p id="notice"><%= notice %></p>

<h1><%= params[:store_name] %></h1>
<h2>Account Balance: <%= value_as_money(@saldo) %></h2>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Cpf</th>
      <th>Date/Time</th>
      <th>Transaction type</th>
      <th>Transaction kind</th>
      <th>Card</th>
      <th>Value</th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.id %></td>
        <td><%= transaction.cpf %></td>
        <td><%= transaction.transaction_datetime %></td>
        <td><%= transaction.transaction_type.description %></td>
        <td><%= transaction.transaction_type.kind %></td>
        <td><%= transaction.card_number %></td>
        <td><%= value_as_money(transaction.value) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<br>
<%= link_to "Back", stores_url %>
